#!/bin/sh

usage() {
cat << EOF
Usage:  herodot shutdown lock|exit|suspend|reboot|poweroff
        herodot shutdown dialog
EOF
    exit 1
}

PROCESS="zenity"

is_process_running() {
    pgrep "$1" > /dev/null 2>&1
    return $?
}

try() {
    local command="$1"
    local message="$2"

    is_process_running "$PROCESS" && return

    if zenity --question \
        --icon="/usr/share/icons/empty.png" \
        --title="Shutdown" \
        --text="$message"; then
        eval "$command"
    fi
}

try_lock() {
    hyprlock
}

try_exit() {
    try "killall -u $(whoami)" "Are you sure you want to exit?"
}

try_suspend() {
    try "loginctl suspend && hyprlock" "Are you sure you want to sleep?" 
}

try_reboot() {
    try "loginctl reboot" "Are you sure you want to restart system?" 
}

try_poweroff() {
    try "loginctl poweroff" "Are you sure you want to shutdown?" 
}

dialog() {
    is_process_running "$PROCESS" && killall "$PROCESS"

    choice=$(zenity --info \
        --icon="/usr/share/icons/empty.png" \
        --title "Shutdown" \
        --text="Please select an action to perform with your system" \
        --ok-label "" \
        --extra-button "" \
        --extra-button "" \
        --extra-button "" \
        --extra-button "" \
        --extra-button "" \
        --timeout="10" )

    case $choice in
        "")  
            hyprlock
            ;;
        "")  
            hyprctl dispatch exit
            ;;
        "")  
            loginctl suspend
            ;;
        "")  
            loginctl reboot
            ;;
        "")  
            loginctl poweroff
            ;;
        *) 
            exit 1
            ;;
    esac
}

case "$1" in
    "lock")
        try_lock
        ;;
    "exit")
        try_exit
        ;;
    "suspend")
        try_suspend
        ;;
    "reboot")
        try_reboot
        ;;
    "poweroff")
        try_poweroff
        ;;
    "dialog")
        dialog
        ;;
    *)
        usage
        ;;
esac
