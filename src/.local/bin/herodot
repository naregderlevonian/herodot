#!/bin/sh

usage() {
    cat << EOF
Usage:  herodot command [arguments...]

Available:              audio
                        battery
                        bluetooth
                        blur
                        brightness
                        dice
                        fan
                        idle
                        keymap
                        movetoworkspace
                        movewindow
                        paper
                        performance
                        resume
                        scheme
                        screenpad
                        shader
                        shutdown
                        submap
                        sunse
                        touchpad
                        waybar
                        wifi
                        workspace
                        zoom
EOF
    exit 1
}

case "$1" in
    "audio")
         herodot-audio "$2" "$3" "$4" "$5"
         ;;
    "battery")
        herodot-battery "$2" "$3"
        ;;
    "bluetooth")
        herodot-bluetooth "$2" "$3" "$4"
        ;;
    "blur")
        herodot-blur "$2" "$3"
        ;;
    "brightness")
        herodot-brightness "$2" "$3" "$4" "$5" "$6"
        ;;
    "dice")
        herodot-dice "$2" "$3"
        ;;
    "fan")
        herodot-fan "$2" "$3" "$4"
        ;;
    "idle")
        herodot-idle "$2" "$3" "$4"
        ;;
    "keyboard")
        herodot-keyboard "$2" "$3" "$4"
        ;;
    "keymap")
        herodot-keymap "$2" "$3" "$4"
        ;;
    "movetoworkspace")
        herodot-movetoworkspace "$2" "$3" "$4"
        ;;
    "movewindow")
        herodot-movewindow "$2" "$3"
        ;;
    "paper")
        herodot-paper "$2" "$3" "$4" "$5"
        ;;
    "performance")
        herodot-performance "$2" "$3" "$4"
        ;;
    "resume")
        herodot-resume
        ;;
    "scheme")
        herodot-scheme "$2" "$3" "$4"
        ;;
    "screenpad")
        herodot-screenpad "$2" "$3" "$4"
        ;;
    "settings")
        herodot-settings "$2" "$3" "$4"
        ;;
    "shader")
        herodot-shader "$2" "$3" "$4" "$5"
        ;;
    "shutdown")
        herodot-shutdown "$2"
        ;;
    "submap")
        herodot-submap "$2" "$3" "${@:4}"
        ;;
    "sunset")
        herodot-sunset "$2" "$3" "$4"
        ;;
    "touchpad")
        herodot-touchpad "$2" "$3" "$4"
        ;;
    "waybar")
        herodot-waybar "$2" "$3" "$4"
        ;;
    "wifi")
        herodot-wifi "$2" "$3" "$4"
        ;;
    "workspace")
        herodot-workspace "$2" "$3"
        ;;
    "zoom")
        herodot-zoom "$2" "$3"
        ;;
    *)
        usage
        ;;
esac
