#!/bin/sh

usage() {
    cat << EOF
Usage:  herodot keyboard get brightness
        herodot keyboard set birghtness toggle
EOF
}

KEYBOARD="asus::kbd_backlight"

get() {
    echo "$(brightnessctl --device="$KEYBOARD" get)"
}

apply() {
    brightnessctl --device="asus::kbd_backlight" set "$1"
}

off() {
    apply "0"
}

toggle() {
    local level="$(get)"
    [ $level = "3" ] && off || apply "$((level + 1))"
}

case "$1" in
    "get")
        case "$2" in
            "brightness")
                get
                ;;
            *)
                usage
                ;;
        esac
        ;;
    "set")
        case "$2" in
            "brightness")
                case "$3" in
                    "toggle")
                        toggle
                        ;;
                    *)
                        usage
                        ;;
                esac
                ;;
            *)
                usage
                ;;
        esac
        ;;
    *)
        usage
        ;;
esac
