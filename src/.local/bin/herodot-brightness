#!/bin/sh

usage() {
    cat << EOF
Usage:  herodot brightness get level 
        herodot brightness set level increase|decrease|up|down|max|min [save]
        herodot brightness set level resume
EOF
    exit 1
}

SCREEN="intel_backlight"
SCREENPAD="asus::screenpad"

SAVE=0


load() {
    herodot settings read "brightness"
}

save() {
    local level="$(get)"
    herodot settings assign "brightness" "$level"
}

get() {
    echo $(brightnessctl --device="intel_backlight" | grep "%" | awk '{print $4}' | tr -d "(|)|%")
}

apply() {
    brightnessctl --device="$SCREEN" --min-value set "$1"
    [ "$(herodot settings read "screenpad.isEnabled")" = "false" ] && return
    brightnessctl --device="$SCREENPAD" --min-value set "$(get)%"
}

update() {
    [ $SAVE -eq 1 ] && save "$DEVICE"
    apply "$1"
}

resume() {
    apply "$(load)%"
}

fuse() {
    local step="$(echo "$1" | sed 's/[^0-9]//g')"
    local level="$(get)"
    local result=$((level - step))

    if (( result < 1 )); then
        exit
    fi
}

[ "$4" = "save" ] && SAVE=1

case "$1" in
    "get")
        case "$2" in
            "level")
                get
                ;;
            *)
                usage
                ;;
        esac
        ;;
    "set")
        case "$2" in
            "level")
                case "$3" in
                    "increase")
                        update "+5%"  
                        ;;
                    "decrease")
                        fuse "5"
                        update "5%-"  
                        ;;
                    "up")
                        update "+1%"  
                        ;;
                    "down")
                        use "1"
                        update "1%-"  
                        ;;
                    "max")
                        update "100%" 
                        ;;
                    "min")
                        update "1%"   
                        ;;
                    "off")
                        update "0%"   
                        ;;
                    "resume")
                        resume
                        ;;
                    *)
                        usage
                        ;;
                esac
                ;;
            *)
                usage
                ;;
        esac
        ;;
    *)
        usage
        ;;
esac

